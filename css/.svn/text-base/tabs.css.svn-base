div#category_list {
  margin-top: 20px;
}

div#category_list h2 {
  font-size: 32px;
  font-weight: normal;
  color: #666;
}

div#category_list h2 img {
  vertical-align: -5px;
  margin-right: 5px;
}

div#category_list h2 span.groupnote {
  font-size: 18px;
  font-weight: normal;
  margin-left: 20px;
  color: #666666
}

div#category_list table.categories {
  font-size: 14px;
}

div#category_list table.categories td {
  padding: 4px 0;
}

div#category_list table.categories td a {
  color: #333333;
  font-weight: normal;
}

div#tab_container h3.tab_header {
  margin-bottom: 20px;
}
